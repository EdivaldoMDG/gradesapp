<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student"
        android:layout_gravity="center"
        android:textSize="40dp"
></TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="229dp"
        android:src="@drawable/ic_home"></ImageView>


    <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center">

         <Button
             android:id="@+id/btAproved"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Aproved"
             android:textColor="@color/backgroundColor"
             android:layout_marginEnd="10dp"
             android:layout_marginRight="30dp"
             android:backgroundTint="@color/successColor"
             tools:ignore="HardcodedText,UnusedAttribute" />

         <Button
             android:id="@+id/btExam"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Exam"
             android:textColor="@color/backgroundColor"
             android:layout_marginEnd="10dp"
             android:layout_marginRight="10dp"
             android:backgroundTint="@color/cancelarColor"
             tools:ignore="HardcodedText,UnusedAttribute" />
     </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/registar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textColor="@color/backgroundColor"
            android:backgroundTint="@color/registerColor"
            tools:ignore="HardcodedText,UnusedAttribute"
            />
    </LinearLayout>
</LinearLayout>